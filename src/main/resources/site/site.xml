<?xml version="1.0" encoding="UTF-8"?>
<site xmlns="urn:enonic:xp:model:1.0">
  <form>
    <input name="enableCacheControlHeader" type="CheckBox">
      <label i18n="site.enableCacheControlHeader">Enable cache control header</label>
      <default>checked</default>
    </input>

    <input name="maxAge" type="TextLine">
      <label i18n="site.maxAge">Max Age in Seconds (max-age)</label>
      <occurrences minimum="0" maximum="1"/>
    </input>

    <input name="sMaxAge" type="TextLine">
      <label i18n="site.sMaxAge">Shared Max Age in Seconds (s-maxage)</label>
      <occurrences minimum="0" maximum="1"/>
      <help-text i18n="site.sMaxAgeHelpText">If set, this value will override max-age for shared caches like CDNs.</help-text>
    </input>

    <input name="includeLastModified" type="CheckBox">
      <label i18n="site.includeLastModified">Include LastModified header</label>
    </input>
  </form>

  <processors>
    <response-processor name="cache-control" order="10"/>
  </processors>
</site>
